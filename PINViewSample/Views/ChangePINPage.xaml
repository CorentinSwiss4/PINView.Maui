<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="PINViewSample.Views.ChangePINPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:PINView="clr-namespace:PINView;assembly=PINView"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:vm="clr-namespace:PINViewSample.ViewModels"
    Title="{Binding Title}"
    ios:Page.UseSafeArea="true">
    <ContentPage.BindingContext>
        <vm:ChangePINPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid Margin="20,40,20,20" VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Existing PIN Entry Box  -->
            <VerticalStackLayout Grid.Row="0" Spacing="15">
                <Label HorizontalTextAlignment="Center" Text="Enter exsiting PIN" />
                <PINView:PINView
                    x:Name="existingPINView"
                    BoxFocusAnimation="ZoomInOut"
                    PINValue="{Binding ExistingPIN}"
                    Style="{StaticResource PINViewStyle}" />
            </VerticalStackLayout>

            <!--  New PIN Entry Box  -->
            <VerticalStackLayout
                Grid.Row="1"
                Margin="0,40,0,0"
                Spacing="15">
                <Label HorizontalTextAlignment="Center" Text="Enter New PIN" />
                <PINView:PINView
                    x:Name="newPINView"
                    BoxFocusAnimation="ZoomInOut"
                    PINValue="{Binding NewPIN}"
                    Style="{StaticResource PINViewStyle}" />
            </VerticalStackLayout>

            <!--  Confirm PIN Entry Box  -->
            <VerticalStackLayout
                Grid.Row="2"
                Margin="0,40,0,0"
                Spacing="15">
                <Label HorizontalTextAlignment="Center" Text="Confirm PIN" />
                <PINView:PINView
                    x:Name="confirmPINView"
                    AutoDismissKeyboard="True"
                    BoxFocusAnimation="ZoomInOut"
                    PINValue="{Binding ConfirmPIN}"
                    Style="{StaticResource PINViewStyle}" />
            </VerticalStackLayout>

            <!--  SAVE Button  -->
            <Button
                Grid.Row="3"
                Command="{Binding DoneCommand}"
                Style="{StaticResource ButtonStyle}"
                Text="DONE"
                VerticalOptions="End" />
        </Grid>
    </ContentPage.Content>
</ContentPage>